{
    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "2.1400",
    "manifest_version": 2,
    "minimum_chrome_version": "35",
    "permissions": [ "contextMenus", "downloads", "tabs", "cookies", "notifications", "<all_urls>" ],
    "default_locale" : "en",
    "background": {
        "scripts": [ "background.js", "js/common.js" ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "24": "icons/icon24.png"
        },
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "icons/icon128.png",
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}
